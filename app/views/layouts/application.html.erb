<!DOCTYPE html>
<html>
<head>
  <title>Projectscope</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<!-- <div class="btn btn-md btn-primary">Sign Out</div> -->
		<% if user_signed_in? %>
			<%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => "btn btn-md btn-primary") %> 
		<% end %>
		<%= yield %>
	</div>
</body>
</html>
