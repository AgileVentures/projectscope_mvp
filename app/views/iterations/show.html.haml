%div.col-md-10
  %h2
    Iteration
  %div
    = button_to 'update all', update_all_tasks_path(:iteration_id => @iteration.id)
    = button_to 'create task', update_all_tasks_path(:iteration_id => @iteration.id)
    = render partial: 'create_task',locals: {iteration:@iteration}
  %table.table
    %tbody{style: 'text-align: center'}
      - @level.each do |nodes|
        %tr{id: "task_#{@iteration}"}
          %td
          - nodes.each do |node|
            -if node.nil?
              %td
            -else
              = render partial: 'task', locals: {node: node, iteration: @iteration}
:javascript
  keep_log=false;