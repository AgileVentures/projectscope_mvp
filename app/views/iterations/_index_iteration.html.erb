<h1 class="text-success">Iterations Templates</h1>
<ul class="nav nav-tabs nav-justified">
  <li role="presentation" class="active"><a href="#">STEP 1:Select or Create Template</a></li>
  <li role="presentation"><a href="#">STEP 2:Select Projects</a></li>
  <li role="presentation"><a href="#">STEP 3:Info Update</a></li>
</ul>
<div class="table-responsive">
  <h3 class="text-info">Select Template</h3>
  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Iteration Tasks Graph</h4>
        </div>
        <div class="modal-body">
          <%= render partial: 'plain_tasks_graph' , locals: {tasks: Task.where(iteration: 98)}%>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <table class="table table-striped table-sm">
    <thead>
    <tr>
      <th>Template</th>
      <th>Application</th>
      <th>Edit</th>
      <td> </td>
    </tr>
    </thead>
    <tbody>
    <% @iterations.where(template:true).each do |iter| %>
        <tr>
          <td>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#myModal">
              <%=iter.name%>
            </button></td>
          <td>1</td>
          <td><%= link_to iter.name, show_iter_temp_path(id: iter.id)%></td>
          <td><a><%= link_to "Select and Go Next Step", iterations_path, class:"btn btn-default btn-sm", type:"button", style:"float: center;"%> </a></td>
        </tr>
    <%end%>
    </tbody>
  </table>

  <h3 class="text-info">Create Template</h3>
  <%= label_tag(:template, "Template Name:") %>
  <%= form_tag(href="/iterations", method: "post") do %>
      <%= text_field_tag(:template) %>
      <%= submit_tag "Create Template" , class: "card-link btn btn-sm btn-success", role: "button"%>
  <% end %>
</div>