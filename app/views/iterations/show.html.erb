      <span class="sr-only">60% Complete</span>
    </div>
  </div>
  <div class="row">
    <% @devTasks.each do |task| %>
        <%= render partial: 'task_card', locals: {node: task, iteration: @iteration}%>
    <% end %>
    <%= render partial: 'create_task_card',locals: {updater_type: "development"}%>
  </div>
</div>
<div>
  <a class="btn btn-primary" href="#" role="button">Post Task</a>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
      <span class="sr-only">60% Complete</span>
    </div>
  </div>
  <div class="row">
    <% @postTasks.each do |task| %>
        <%= render partial: 'task_card', locals: {node: task, iteration: @iteration}%>
    <% end %>
    <%= render partial: 'create_task_card',locals: {updater_type: "post"}%>
  </div>
</div>
