<!doctype html>
<html lang="en">

<body>
<div class="container-fluid">
  <div class="row">
    <%= render partial: 'dashboard_sidebar' %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="text-success">Iteration Templates</h1>
      </div>
      <%= form_tag("/iterations/create_task", method: "post") do %>
          <%= label_tag(:template, "Template Name:") %>
          <%= text_field_tag(:template) %>
          <%= submit_tag "Create Template" , class: "card-link btn btn-sm btn-success", role: "button"%>
      <% end %>
      <h3 class="text-secondary">Tasks Graph Template Modification</h3>
      <%= form_tag("/iterations/create_task", method: "post") do %>
          <%= label_tag(:template, "Template Name:") %>
          <%=select_tag :title, options_for_select(Iteration.where(template: true).collect{ |u| [u.name, u.id] })%>
          <%= submit_tag "Select Template" , class: "card-link btn btn-sm btn-success", role: "button"%>
      <% end %>
      <div class="task-graph">
        <div class="text-secondary">
          <h4>Preliminary Tasks</h4>
          <div class="row">
              <%= render partial: 'plain_create_task_card',locals: {updater_type: "prelilminary",task_titles: @pretaskTitles}%>
          </div>
        </div>
        <div class="text-secondary">
          <h4>Development Tasks</h4>
          <div class="row">
            <%= render partial: 'plain_create_task_card',locals: {updater_type: "development", task_titles: @devtaskTitles}%>
          </div>
        </div>
        <div class="text-secondary">
          <h4>Post Task</h4>
          <div class="row">
              <%= render partial: 'plain_create_task_card',locals: {updater_type: "post", task_titles: @postaskTitles}%>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
</body>
</html>
